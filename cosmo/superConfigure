#! /bin/sh 
set -eux

#COSMO_LIBDIR=$(realpath "../../cosmopolitan/")
#HEADER_PATHS=$(realpath "./header_stubs")
COSMO_REPO=$(realpath "../../cosmopolitan")
COSMO_GCC=$(realpath "../../cosmopolitan/o/third_party/gcc/bin/x86_64-linux-musl-gcc")
#COSMO_ISYSTEM=$(realpath "../../cosmopolitan/libc/isystem")
COSMO_ISYSTEM=$(realpath "dummy_isystem")
SYSROOT=$(realpath "../../sysroot")

PREFIX=$(realpath "../../blead-cosmo")

if [ ! -d $COSMO_ISYSTEM ]; then
    echo "<<<SUPERCONFIGURE>>> cosmo isystem not found"
    exit 1
fi

echo "<<<SUPERCONFIGURE>>> cosmo isystem at $COSMO_REPO, assuming other files exist as well"

echo "<<<SUPERCONFIGURE>>> making prefix dirs"
mkdir -p "$PREFIX"
mkdir -p "$PREFIX/bin"

echo "<<<SUPERCONFIGURE>>> Building cosmo"
make -C $COSMO_REPO -j4 o//cosmopolitan.a
make -C $COSMO_REPO -j4 o//libc/crt/crt.o
make -C $COSMO_REPO -j4 o//ape/ape.lds
make -C $COSMO_REPO -j4 o//ape/ape.o
make -C $COSMO_REPO -j4 o//ape/ape-no-modify-self.o
make -C $COSMO_REPO -j4 o/cosmopolitan.h

cd ../

echo "<<<SUPERCONFIGURE>>> Running Configure"

# -Duserelocatableinc \
# -Uusedl \
# -Uusenm \
# -Darchname="x86_64-cosmo" \
# -Uso \
# -Uusethreads \
# -Uusemultiplicity \
# -Dosname="cosmo" \

#-Dsysroot="$SYSROOT" \
#-Dcc="$COSMO_GCC" \

#-Dccflags="-static -nostdlib -nostdinc -fno-pie -no-pie -fno-omit-frame-pointer -pg -mnop-mcount -mno-tls-direct-seg-refs -include $COSMO_REPO/o/cosmopolitan.h -I $COSMO_ISYSTEM" \
#-Dldflags="-static -nostdlib -nostdinc -fno-pie -no-pie -fno-pie -no-pie -fno-omit-frame-pointer -pg -mnop-mcount -mno-tls-direct-seg-refs -Wl,--gc-sections -fuse-ld=bfd -Wl,-T,$COSMO_REPO/o//ape/ape.lds $COSMO_REPO/o//libc/crt/crt.o $COSMO_REPO/o//ape/ape.o" \
#-Dlibs="$COSMO_REPO/o//cosmopolitan.a"
#requiredlibs="$COSMO_REPO/o//cosmopolitan.a" \
COSMO_REPO="$COSMO_REPO" sh Configure -e \
    -Dprefix="$PREFIX" \
    -Dusedevel \
    -Doptimize="-Os" \
    -Dmyhostname="cosmo" \
    -Dmydomain="invalid" \
    -Dcf_by="cosmo" \
    -DDEBUGGING

